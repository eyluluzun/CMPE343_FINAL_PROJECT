<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.khas.cmpe343.group5.CustomerController">

    <top>
        <HBox spacing="20" style="-fx-background-color:#2e7d32;">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
            <Label text="GreenGrocer"
                   style="-fx-text-fill:white;-fx-font-size:18;-fx-font-weight:bold"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="usernameLabel" style="-fx-text-fill:white"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-background-color:#f5f5f5;">
            <padding>
                <Insets top="15" right="10" bottom="15" left="10"/>
            </padding>

            <Label text="Search"/>
            <TextField fx:id="searchField" promptText="Search product"/>

            <Separator/>

            <Label text="Categories"/>
            <RadioButton fx:id="allRadio" text="All" selected="true"/>
            <RadioButton fx:id="fruitsRadio" text="Fruits"/>
            <RadioButton fx:id="vegetablesRadio" text="Vegetables"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true">
            <GridPane fx:id="productGrid" hgap="20" vgap="20">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </GridPane>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color:#eeeeee;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="View Cart" onAction="#handleViewCart"/>
        </HBox>
    </bottom>

</BorderPane>
