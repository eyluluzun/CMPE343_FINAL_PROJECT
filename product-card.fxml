<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox spacing="8"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.khas.cmpe343.group5.ProductCardController"
      style="-fx-border-color:#ddd;-fx-background-color:white;-fx-border-radius:6;-fx-background-radius:6">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <ImageView fx:id="productImage"
               fitWidth="140"
               fitHeight="100"
               preserveRatio="true"/>

    <Label fx:id="nameLabel" style="-fx-font-weight:bold"/>
    <Label fx:id="priceLabel" style="-fx-text-fill:#2e7d32"/>

    <HBox spacing="5">
        <Label text="Kg:"/>
        <TextField fx:id="kgField" prefWidth="50"/>
    </HBox>

    <Button text="Add to Cart"
            onAction="#handleAddToCart"
            style="-fx-background-color:#2e7d32;-fx-text-fill:white"/>
</VBox>
